int led = 13;
int pir = 2;
int pirdato;

void setup() 
{
  Serial.begin(9600);
  pinMode(led, OUTPUT);
  pinMode(pir, INPUT);
}

void loop()
{
  pirdato = digitalRead(pir);
  
  if(pirdato == HIGH)
   { 
   Serial.println("Motion Detected!");
   digitalWrite(led , HIGH);
   } 
  else 
   {
   Serial.println("No Motion");
   digitalWrite(led , LOW);
   }
  delay(10);
}
